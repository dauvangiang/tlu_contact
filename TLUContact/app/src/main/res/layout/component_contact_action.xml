<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <!-- Button "Nhắn tin" -->
    <androidx.cardview.widget.CardView
        android:id="@+id/text_chat_btn"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_margin="8dp"
        android:background="@color/white"
        android:gravity="center"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/text_chat_action"
            android:textColor="@color/primary_blue"
            android:textSize="11sp"
            android:textStyle="bold"
            app:drawableTint="@color/primary_blue"
            app:drawableTopCompat="@drawable/ic_text_chat" />

    </androidx.cardview.widget.CardView>

    <!-- Button "Gọi thoại" -->
    <androidx.cardview.widget.CardView
        android:id="@+id/call_btn"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_margin="8dp"
        android:background="@color/white"
        android:gravity="center"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/call_action"
            android:textColor="@color/primary_blue"
            android:textSize="11sp"
            android:textStyle="bold"
            app:drawableTint="@color/primary_blue"
            app:drawableTopCompat="@drawable/ic_call" />

    </androidx.cardview.widget.CardView>

    <!-- Button "Gửi Email" -->
    <androidx.cardview.widget.CardView
        android:id="@+id/send_email_btn"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_margin="8dp"
        android:background="@color/white"
        android:gravity="center"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/send_email_action"
            android:textColor="@color/primary_blue"
            android:textSize="11sp"
            android:textStyle="bold"
            app:drawableTint="@color/primary_blue"
            app:drawableTopCompat="@drawable/ic_email" />

    </androidx.cardview.widget.CardView>

</LinearLayout>