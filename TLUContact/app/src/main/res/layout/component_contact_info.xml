<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Avatar -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_avatar_detail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user_avatar"
        app:strokeColor="@color/primary_blue"
        app:strokeWidth="4dp"
        app:shapeAppearanceOverlay="@style/RoundedImage"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tên người dùng -->
    <TextView
        android:id="@+id/tv_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_name_mockup"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary_black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/img_avatar_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Địa điểm -->
    <TextView
        android:id="@+id/tv_second_contact_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_contact_info_mockup"
        android:textSize="14sp"
        android:textColor="@color/second_black"
        app:layout_constraintTop_toBottomOf="@id/tv_contact_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>